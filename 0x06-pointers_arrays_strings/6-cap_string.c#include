talize - capitalizes the first letter of each word in a string
 * @s: the string to capitalize
 *
 * Return: the address of the capitalized string
 */
char *capitalize(char *s)
{
    int i = 0;
    
    while (s[i])
    {
        if (s[i] >= 'a' && s[i] <= 'z')
        {
            if (i == 0 || s[i-1] == ' ' || s[i-1] == '\t' || s[i-1] == '\n')
            {
                s[i] -= ('a' - 'A');
            }
        }
        else if (s[i] >= 'A' && s[i] <= 'Z')
        {
            if (i != 0 && s[i-1] != ' ' && s[i-1] != '\t' && s[i-1] != '\n')
            {
                s[i] += ('a' - 'A');
            }
        }
        i++;
    }
    
    return s;
}

